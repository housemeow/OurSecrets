        </GridView>
        <Button Content="NewAgenda" HorizontalAlignment="Left" Margin="833,204,0,0" VerticalAlignment="Top" Click="ClickButtonNew"/>
        <Button Content="EditAgenda" HorizontalAlignment="Left" Margin="968,204,0,0" VerticalAlignment="Top" Click="ClickButtonEdit"/>
        <Button Content="ViewAgenda" HorizontalAlignment="Left" Margin="1102,204,0,0" VerticalAlignment="Top" Click="ClickButtonView"/>
        <Button Content="Gantt" HorizontalAlignment="Left" Margin="722,242,0,0" VerticalAlignment="Top" Click="ClickButtonGantt"/>
