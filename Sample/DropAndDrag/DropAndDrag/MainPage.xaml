<Page
    x:Class="DropAndDrag.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:DropAndDrag"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid x:Name="_grid" Background="#FFBD2C2C">
        <Button x:Name="_AddButton" Content="加入磚" HorizontalAlignment="Left" Margin="30,30,0,0" VerticalAlignment="Top" FontSize="20" Click="ClickAddButton" Background="#FF0E3C4D"/>
        <TextBox x:Name="_textBox" HorizontalAlignment="Left" Margin="30,95,0,0" TextWrapping="Wrap" Text="TextBox" VerticalAlignment="Top" TextAlignment="Center"/>
        <Image x:Name="_imgSanta" Source="Assets/test.png" HorizontalAlignment="Left" VerticalAlignment="Top" Height="160"></Image>
        <ItemsControl x:Name="_itemControl" HorizontalAlignment="Left" Height="160" Margin="54,163,0,0" VerticalAlignment="Top" Width="1263">
            <ItemsControl.ItemsPanel>
                <ItemsPanelTemplate>
                    <WrapGrid/>
                </ItemsPanelTemplate>
            </ItemsControl.ItemsPanel>
        </ItemsControl>
        <ListBox x:Name="_listBox" HorizontalAlignment="Left" Height="227" Margin="30,495,0,0" VerticalAlignment="Top" Width="1102"/>
    </Grid>
</Page>
